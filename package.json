{
  "name": "pyenv-action",
  "version": "16",
  "private": true,
  "description": "Setup python action",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "release": "ncc build src/pyenv-action.ts && git add -f dist/",
    "test": "jest --runInBand",
    "test-watch": "jest --runInBand --detectOpenHandles --bail --watch",
    "lint": "eslint . --ext .ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabrielfalcao/pyenv-action.git"
  },
  "engines": {
    "node": "^22"
  },
  "keywords": [
    "actions",
    "python",
    "pyenv",
    "node",
    "setup"
  ],
  "author": "Gabriel Falc√£o",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/exec": "1.1.1",
    "@actions/github": "6.0.0",
    "@actions/io": "1.1.3",
    "@actions/tool-cache": "2.0.1",
    "semver": "7.6.2"
  },
  "devDependencies": {
    "@types/jest": "29.5.3",
    "@types/js-yaml": "4.0.9",
    "@types/node": "20.12.12",
    "@types/semver": "7.5.8",
    "@typescript-eslint/eslint-plugin": "8.24.0",
    "@typescript-eslint/parser": "8.24.0",
    "@vercel/ncc": "0.38.3",
    "eslint": "9.16.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-prettier": "5.2.1",
    "jest": "29.7.0",
    "prettier": "3.2.5",
    "ts-jest": "29.2.5",
    "typescript": "5.7.2"
  }
}
