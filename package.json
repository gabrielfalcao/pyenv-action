{
  "name": "pyenv-action",
  "version": "1.0.0",
  "private": true,
  "description": "Setup python action",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "release": "ncc build src/pyenv-action.ts && git add -f dist/",
    "test": "jest",
    "test-watch": "jest --watch",
    "lint": "eslint . --ext .ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabrielfalcao/pyenv-action.git"
  },
  "keywords": [
    "actions",
    "python",
    "pyenv",
    "node",
    "setup"
  ],
  "author": "Gabriel Falc√£o",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.2.3",
    "@actions/github": "2.1.1",
    "@actions/exec": "1.0.3",
    "@actions/io": "1.0.2",
    "@actions/tool-cache": "1.3.3",
    "semver": "6.3.0"
  },
  "devDependencies": {
    "@types/jest": "24.9.1",
    "@types/js-yaml": "3.12.2",
    "@types/nock": "11.1.0",
    "@types/node": "12.12.30",
    "@types/semver": "6.2.1",
    "@typescript-eslint/eslint-plugin": "2.24.0",
    "@typescript-eslint/parser": "2.24.0",
    "@zeit/ncc": "0.20.5",
    "eslint": "6.8.0",
    "eslint-config-prettier": "6.10.0",
    "eslint-plugin-prettier": "3.1.2",
    "husky": "3.1.0",
    "jest": "24.9.0",
    "jest-circus": "24.9.0",
    "prettier": "1.19.1",
    "ts-jest": "24.3.0",
    "typescript": "3.8.3"
  },
  "husky": {
    "skipCI": true,
    "hooks": {
      "pre-commit": "echo 'rm dist/index.js && make dist/index.js'"
    }
  }
}
