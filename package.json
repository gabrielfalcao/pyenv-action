{
  "name": "pyenv-action",
  "version": "1.0.0",
  "private": true,
  "description": "Setup python action",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "release": "ncc build src/pyenv-action.ts && git add -f dist/",
    "test": "jest --runInBand",
    "test-watch": "jest --runInBand --detectOpenHandles --bail --watch",
    "lint": "eslint . --ext .ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/gabrielfalcao/pyenv-action.git"
  },
  "keywords": [
    "actions",
    "python",
    "pyenv",
    "node",
    "setup"
  ],
  "author": "Gabriel Falc√£o",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.2.6",
    "@actions/exec": "1.0.4",
    "@actions/github": "4.0.0",
    "@actions/io": "1.0.2",
    "@actions/tool-cache": "1.6.1",
    "@octokit/core": "3.2.4",
    "semver": "7.3.4"
  },
  "devDependencies": {
    "@types/jest": "26.0.19",
    "@types/js-yaml": "3.12.5",
    "@types/node": "14.14.13",
    "@types/semver": "7.3.4",
    "@typescript-eslint/eslint-plugin": "4.9.1",
    "@typescript-eslint/parser": "4.9.1",
    "@vercel/ncc": "0.25.1",
    "eslint": "7.15.0",
    "eslint-config-prettier": "6.15.0",
    "eslint-plugin-prettier": "3.3.0",
    "husky": "4.3.6",
    "jest": "26.6.3",
    "jest-circus": "26.6.3",
    "prettier": "2.2.1",
    "ts-jest": "26.4.4",
    "typescript": "4.1.3"
  },
  "husky": {
    "skipCI": true,
    "hooks": {
      "pre-commit": "make release"
    }
  }
}
